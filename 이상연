using UnityEngine;

public class MouseSelectAndKeyboardMove : MonoBehaviour
{
    public float moveSpeed = 1f; // ì´ë™ ì†ë„
    private Transform currentTarget; // í˜„ì¬ ì„ íƒëœ ê´€ì ˆ(Target)
    public Camera mainCamera; // ì¹´ë©”ë¼

    void Update()
    {
        // ë§ˆìš°ìŠ¤ í´ë¦­ìœ¼ë¡œ Target ì„ íƒ
        if (Input.GetMouseButtonDown(0)) // ì™¼ìª½ ë§ˆìš°ìŠ¤ í´ë¦­
        {
            Ray ray = mainCamera.ScreenPointToRay(Input.mousePosition);
            if (Physics.Raycast(ray, out RaycastHit hit))
            {
                currentTarget = hit.transform; // í´ë¦­ëœ ì˜¤ë¸Œì íŠ¸ë¥¼ Targetìœ¼ë¡œ ì„¤ì •
                Debug.Log("Selected Target: " + currentTarget.name);
            }
        }

        // í‚¤ë³´ë“œë¡œ ì„ íƒëœ Target ì´ë™
        if (currentTarget != null)
        {
            if (Input.GetKey(KeyCode.W)) // ì•ìœ¼ë¡œ (Z+)
                currentTarget.position += Vector3.forward * moveSpeed * Time.deltaTime;

            if (Input.GetKey(KeyCode.S)) // ë’¤ë¡œ (Z-)
                currentTarget.position += Vector3.back * moveSpeed * Time.deltaTime;

            if (Input.GetKey(KeyCode.A)) // ì™¼ìª½ìœ¼ë¡œ (X-)
                currentTarget.position += Vector3.left * moveSpeed * Time.deltaTime;

            if (Input.GetKey(KeyCode.D)) // ì˜¤ë¥¸ìª½ìœ¼ë¡œ (X+)
                currentTarget.position += Vector3.right * moveSpeed * Time.deltaTime;

            if (Input.GetKey(KeyCode.Q)) // ì•„ë˜ë¡œ (Y-)
                currentTarget.position += Vector3.down * moveSpeed * Time.deltaTime;

            if (Input.GetKey(KeyCode.E)) // ìœ„ë¡œ (Y+)
                currentTarget.position += Vector3.up * moveSpeed * Time.deltaTime;
        }
    }
}
